<!-- Dsiplays single note. Rendered in user_notes/show and notes/show -->

<% rating = @note.rating %>	

<div class="row">	
	<div class="large-12 medium-12 small-12 columns">
		<table>
			<tr>
				<td class="noteCategory"><strong>Appearance</td></strong><td class="noteCopy"><%= @note.appearance %></td>
			</tr>
			<tr>
				<td class="noteCategory"><strong>Nose</td></strong><td class="noteCopy"><%= @note.nose %></td>
			</tr>
			<tr>
				<td class="noteCategory"><strong>Palate</td></strong><td class="noteCopy"><%= @note.palate %></td>
			</tr>
			<tr>
				<td class="noteCategory"><strong>Conclusion</td></strong><td class="noteCopy"><%= @note.conclusion %></td>
			</tr>
			<tr>
				<td class="noteCategory"><strong>Maturity</td></strong><td class="noteCopy"><%= @note.maturity %></td>
			</tr>
			<tr>
			<!-- displays the correct number of stars using a loop between one and the appropriate rating score-->
				<td class="noteCategory"><strong>Rating</strong></td>
				<td class="noteCopy">
					<% (1..rating).each do |i| %>
						<i class="fa fa-star"></i>
					<% end %>
					<% (1..(10-rating)).each do |i| %>
						<i class="fa fa-star-o"></i>
					<% end %>
				</td>	
			</tr>			
		</table>
	</div>
</div>