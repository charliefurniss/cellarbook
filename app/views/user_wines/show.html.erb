<!-- Displays individual wine with notes below, plus add note form appears on button push -->

<!-- this links to specific js file --> 
<% javascript_include_tag "/javascripts/user_wines_show/user_wines.js" %>
<div class="row" id="mainBackground">
  	<div class="small-10 small-offset-1 columns"> 
  		<div class="mainDisplay"> 
			<div class="row" id="userWineMain">
				<div class="small-12 columns">
					<div class="backLink">
						<i class="fa fa-long-arrow-left"></i>	
						<%= link_to 'back to wines', user_wines_path %>
					</div>

					<div class="show_wine_container">
						<!-- Displays multiple notes-->
						<!-- shows correct image depending on style of wine -->
						<% if @wine.style.downcase == "sparkling" %>
							<% bottle_url = "/assets/champagne.jpg" %>
						<% elsif @wine.style.downcase == "red" %>
							<% bottle_url = "/assets/red.jpg" %>
						<% elsif @wine.style.downcase == "white" %>
							<% bottle_url = "/assets/white.jpg" %>
						<% elsif @wine.style.downcase == "rose" %>
							<% bottle_url = "/assets/rose.jpg" %>
						<% elsif @wine.style.downcase == "sweet" %>
							<% bottle_url = "/assets/sweet.jpg" %>
						<% end %>

						<div class="small-3 columns">
							<%= image_tag(bottle_url, :class => "show-image") %>
						</div>
						<div class="small-7 columns show_wine_details">
							<div class="wine_links">
								<a class="wine_link"><%= @wine.style.titleize %></a>
								<a class="wine_link"><%= @wine.region %></a>
								<a class="wine_link"><%= @wine.country %></a><br>
								<a class="wine_link"><%= @wine.grape %></a>
								<a class="wine_link"><%= "#{@wine.window_start}â€“#{@wine.window_end}" %></a>
							</div>
							<h3 class="show_wine_producer"><%= @wine.producer %></h3>
							<h3 class="show_wine_name"><%= "#{@wine.name} #{@wine.vintage}" %></h3>
							<h5>Bottles remaining</h5>
							<div id="quantity_container">
								<% (1..@quantity).each do |i| %>
									<div class="quantity_bottles">
										<%= image_tag("/assets/bottle.png", size: "50x50") %>
									</div>	
								<% end %>
							</div>	
						</div>
						<div class="small-2 columns">
						</div>
					</div>	
			  </div>
			</div>  
		</div>
	</div>	
</div>

<div class="row" id="notesArea">
  	<div class="small-10 small-offset-1 columns">
			<div id="newNoteForm">
				<%= render "/partials/new_note_form" %>
			</div>
		<%= render "/partials/show_user_notes" %>
		<div id="note_button_container">
			<% if @quantity > 0 %>
				<button id="add_note_button">Drink bottle and tasting note</button>
			<% end %>
		</div>
	</div>
</div>